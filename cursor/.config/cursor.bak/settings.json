{
  // Window Settings
  "window.title": "${rootName}${separator}${activeFolderShort}${separator}${activeEditorShort} ${dirty}",
  "window.titleSeparator": " â†’ ",
  "window.restoreWindows": "none",
  "window.restoreFullscreen": false,
  "window.openWithoutArgumentsInNewWindow": "on",
  "workbench.startupEditor": "none",

  // Cleanup the noise
  "breadcrumbs.enabled": false,
  "editor.minimap.enabled": false,
  "window.commandCenter": false,
  "gitlens.statusBar.enabled": false,
  "git.enableStatusBarSync": false,
  "gitlens.statusBar.pullRequests.enabled": false,
  "workbench.layoutControl.enabled": false,
  "workbench.editor.editorActionsLocation": "hidden",
  "workbench.editor.showTabs": "none",
  "workbench.activityBar.location": "hidden",
  "workbench.activityBar.orientation": "vertical", // Incase you do want to see it and still use ctrl+[h,j,k,l] to navigate
  "files.exclude": {
    "**/node_modules": true
  },

  // Cursor Chat
  "cursor.chat.defaultNoContext": true,
  "cursor.terminal.usePreviewBox": true,
  "cursor.cmdk.useThemedDiffBackground": true,

  // Git Settings
  "git.openRepositoryInParentFolders": "always",

  // Zen Mode
  "zenMode.fullScreen": false,
  "zenMode.showTabs": "none",

  // Workbench Settings
  "workbench.list.smoothScrolling": true,
  "editor.smoothScrolling": true,
  "terminal.integrated.smoothScrolling": true,
  "terminal.integrated.scrollback": 10000,
  "cursor.chat.smoothStreaming": true,

  // Explorer Settings
  "explorer.autoReveal": false,
  "explorer.expandSingleFolderWorkspaces": false,
  "explorer.compactFolders": true,

  // Editor Settings
  "files.hotExit": "off",
  "editor.fontFamily": "JetBrainsMono Nerd Font",
  "editor.fontSize": 13,
  "editor.lineNumbers": "relative",
  "vim.smartRelativeLine": true,
  "workbench.editor.closeOnFileDelete": true,
  "workbench.editor.restoreViewState": false,

  // Cursor Settings
  "editor.cursorStyle": "block",
  "editor.multiCursorLimit": 100,
  "editor.cursorBlinking": "smooth",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyleInactive": "none",
  "vim.cursorStylePerMode.insert": "line",
  "vim.cursorStylePerMode.normal": "block",
  "editor.cursorSmoothCaretAnimation": "on",

  // Terminal Settings
  "terminal.integrated.fontSize": 13,
  "workbench.editor.empty.hint": "hidden",
  "terminal.integrated.tabs.title": "${sequence}${separator}${workspaceFolderName}",
  "terminal.integrated.tabs.location": "left",
  "terminal.integrated.persistentSessionReviveProcess": "never",
  "terminal.integrated.hideOnStartup": "always",
  "terminal.integrated.allowChords": false,
  "terminal.integrated.localEchoExcludePrograms": [
    "vim",
    "vi",
    "nano",
    "tmux",
    "nvim"
  ],

  // Themes
  "workbench.colorTheme": "Aura Soft Dark",
  "workbench.preferredDarkColorTheme": "Aura Soft Dark",
  "workbench.preferredHighContrastColorTheme": "Aura Dark",
  "workbench.iconTheme": "eq-material-theme-icons-ocean",
  "workbench.colorCustomizations": {
    "[Aura Soft Dark]": {
      "titleBar.activeBackground": "#21202E",
      "statusBar.background": "#21202E",
      "statusBar.noFolderBackground": "#21202E",
      "sideBar.background": "#21202E",
      "sideBarTitle.background": "#21202E",
      "activityBar.background": "#21202E",
      "panel.background": "#21202e",
      "titleBar.border": "#3A3855",
      "statusBar.border": "#3A3855",
      "sideBar.border": "#3A3855",
      "activityBar.border": "#3A3855",
      "panel.border": "#454364",
      "editorGroup.border": "#454364",
      "editor.lineHighlightBackground": "#ffffff08",
      "editor.selectionBackground": "#A277ff35",
      "terminal.inactiveSelectionBackground": "#A277ff35",
      "editor.inactiveSelectionBackground": "#A277ff35"
    }
  },

  // Custom Fonts for the whole ui
  "apc.font.family": "JetBrainsMono Nerd Font",

  "apc.monospace.font.family": "JetBrainsMono Nerd Font",
  "apc.parts.font.family": {
    "sidebar": "JetBrainsMono Nerd Font",
    "titlebar": "JetBrainsMono Nerd Font",
    "activityBar": "JetBrainsMono Nerd Font",
    "panel": "JetBrainsMono Nerd Font",
    "tabs": "JetBrainsMono Nerd Font",
    "statusbar": "JetBrainsMono Nerd Font",
    "settings-body": "JetBrainsMono Nerd Font",
    "extension-editor": "JetBrainsMono Nerd Font", // Install the font and restart vscode
    "monaco-menu": "JetBrainsMono Nerd Font",
    "auxiliarybar": "JetBrainsMono Nerd Font"
  },

  // Vim Settings
  "vim.leader": " ",
  "vim.easymotion": true,
  "vim.replaceWithRegister": true,
  "vim.useSystemClipboard": true,

  // Trigger which-key menu
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["<space>"],
      "commands": ["whichkey.show"]
    }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": ["<space>"],
      "commands": ["whichkey.show"]
    }
  ],

  // Which Key Bindings
  "whichkey.bindingOverrides": [
    {
      "keys": " ",
      "name": "Commands",
      "type": "bindings",
      "command": "",
      "display": "hidden"
    },
    {
      "keys": "c",
      "name": "+Code",
      "type": "bindings",
      "bindings": [
        {
          "key": "a",
          "name": "Code Actions",
          "type": "command",
          "command": "editor.action.quickFix"
        },
        {
          "key": "f",
          "name": "Format Document",
          "type": "command",
          "command": "editor.action.formatDocument"
        },
        {
          "key": "r",
          "name": "Find References",
          "type": "command",
          "command": "editor.action.goToReferences"
        },
        {
          "key": "d",
          "name": "Peek Definition",
          "type": "command",
          "command": "editor.action.peekDefinition"
        },
        {
          "key": "D",
          "name": "Go to Definition (split)",
          "type": "command",
          "command": "editor.action.revealDefinitionAside"
        },
        {
          "key": "i",
          "name": "Show Info",
          "type": "command",
          "command": "editor.action.showHover"
        },
        {
          "key": "s",
          "name": "Trigger Suggest",
          "type": "command",
          "command": "editor.action.triggerSuggest"
        },
        {
          "key": "R",
          "name": "Rename Symbol",
          "type": "command",
          "command": "editor.action.rename"
        },
        {
          "key": "t",
          "name": "Peek Type Definition",
          "type": "command",
          "command": "editor.action.peekTypeDefinition"
        },
        {
          "key": "T",
          "name": "Go to Type Definition",
          "type": "command",
          "command": "editor.action.goToTypeDefinition"
        },
        {
          "key": "o",
          "name": "Organize Imports",
          "type": "command",
          "command": "editor.action.organizeImports"
        },
        {
          "key": "m",
          "name": "Show Problems",
          "type": "command",
          "command": "workbench.actions.view.problems"
        }
      ]
    },
    {
      "keys": "f",
      "name": "+Find/Files",
      "type": "bindings",
      "bindings": [
        {
          "key": "f",
          "name": "Find File",
          "type": "command",
          "command": "workbench.action.quickOpen"
        },
        {
          "key": "b",
          "name": "Find Open Buffer",
          "type": "command",
          "command": "workbench.action.showAllEditors"
        },
        {
          "key": "s",
          "name": "Search String in Files",
          "type": "command",
          "command": "workbench.action.quickTextSearch"
        },
        {
          "key": "D",
          "name": "Delete current file",
          // "icon": "trash",
          "type": "commands",
          "commands": [
            "workbench.files.action.showActiveFileInExplorer",
            "deleteFile"
          ]
        },
        {
          "key": "t",
          "name": "Toggle tree/explorer view",
          // "icon": "list-tree",
          "type": "conditional",
          "bindings": [
            {
              "key": "",
              "name": "Show explorer view",
              "type": "command",
              "command": "workbench.view.explorer"
            },
            {
              "key": "when:sideBarVisible && explorerViewletVisible",
              "name": "Hide side bar",
              "type": "command",
              "command": "workbench.action.toggleSidebarVisibility"
            }
          ]
        },
        {
          "key": "T",
          "name": "Show active file in tree/explorer view",
          // "icon": "list-tree",
          "type": "command",
          "command": "workbench.files.action.showActiveFileInExplorer"
        },
        {
          "key": "S",
          "name": "Save all files",
          // "icon": "save-all",
          "type": "command",
          "command": "workbench.action.files.saveAll"
        }
      ]
    },
    {
      "keys": "s",
      "name": "+Surround",
      "type": "bindings",
      "bindings": [
        {
          "key": "w",
          "name": "Surround word",
          "type": "command",
          "command": "vim.remap",
          "args": {
            "after": ["y", "s", "i", "w"]
          }
        },
        {
          "key": "l",
          "name": "Surround line",
          "type": "command",
          "command": "vim.remap",
          "args": {
            "after": ["y", "s", "s"]
          }
        },
        {
          "key": "e",
          "name": "Surround to end of line",
          "type": "command",
          "command": "vim.remap",
          "args": {
            "after": ["y", "s", "$"]
          }
        },
        {
          "key": "p",
          "name": "Surround paragraph",
          "type": "command",
          "command": "vim.remap",
          "args": {
            "after": ["y", "s", "i", "p"]
          }
        },
        {
          "key": "d",
          "name": "Delete surrounding",
          "type": "command",
          "command": "vim.remap",
          "args": {
            "after": ["d", "s"]
          }
        },
        {
          "key": "c",
          "name": "Change surrounding",
          "type": "command",
          "command": "vim.remap",
          "args": {
            "after": ["c", "s"]
          }
        },
        {
          "key": "t",
          "name": "Tag operations",
          "type": "bindings",
          "bindings": [
            {
              "key": "t",
              "name": "Surround with tag",
              "type": "command",
              "command": "vim.remap",
              "args": {
                "after": ["S", "t"]
              }
            },
            {
              "key": "c",
              "name": "Change surrounding tag",
              "type": "command",
              "command": "vim.remap",
              "args": {
                "after": ["c", "s", "t", "<"]
              }
            }
          ]
        }
      ]
    }
  ],

  // Formatters:
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[lua]": {
    "editor.defaultFormatter": "sumneko.lua"
  }
}
