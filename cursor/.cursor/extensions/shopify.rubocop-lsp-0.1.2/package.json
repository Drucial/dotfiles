{
	"name": "rubocop-lsp",
	"displayName": "RuboCop LSP",
	"description": "VS Code Integration for RuboCop, the Ruby Linter/Formatter",
	"repository": {
		"url": "https://github.com/Shopify/rubocop-lsp"
	},
	"version": "0.1.2",
	"license": "MIT",
	"publisher": "Shopify",
	"engines": {
		"vscode": "^1.46.0"
	},
	"categories": [
		"Programming Languages"
	],
	"keywords": [
		"ruby",
		"rubocop",
		"language-server"
	],
	"activationEvents": [
		"onCommand:rubocop-lsp.start",
		"onCommand:rubocop-lsp.stop",
		"onCommand:rubocop-lsp.restart",
		"onCommand:rubocop-lsp.showOutput",
		"onLanguage:ruby",
		"workspaceContains:Gemfile.lock"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "rubocop-lsp.start",
				"title": "RuboCop: Start"
			},
			{
				"command": "rubocop-lsp.stop",
				"title": "RuboCop: Stop"
			},
			{
				"command": "rubocop-lsp.restart",
				"title": "RuboCop: Restart"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js",
		"package": "vsce package"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.20.16",
		"@types/vscode": "^1.46.0",
		"@typescript-eslint/eslint-plugin": "^4.14.1",
		"@typescript-eslint/parser": "^4.14.1",
		"eslint": "^7.19.0",
		"glob": "^7.1.6",
		"mocha": "^8.2.1",
		"typescript": "^4.1.3",
		"vscode-test": "^1.5.0",
		"vsce": "^1.96.1"
	},
	"dependencies": {
		"vscode-languageclient": "^7.0.0"
	},
